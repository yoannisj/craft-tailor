{
    "name": "yoannisj/craft-tailor",
    "description": "Utilities to help with writing modular Twig templates in Craft CMS",
    "type": "craft-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Yoannis Jamar",
            "homepage": "https://yoannis.com"
        }
    ],
    "support": {
        "email": "office@yoannis.com",
        "issues": "https://github.com/yoannisj/craft-tailor/issues?state=open",
        "source": "https://github.com/yoannisj/craft-tailor",
        "docs": "https://github.com/yoannisj/craft-tailor/blob/master/README.md"
    },
    "autoload": {
        "psr-4": {
            "yoannisj\\tailor\\": "src/"
        }
    },
    "extra": {
        "handle": "tailor",
        "name": "Tailor",
        "class": "yoannisj\\tailor\\Tailor"
    },
    "require": {
        "craftcms/cms": "^4.0"
    },
    "require-dev": {
        "codeception/codeception": "^4.1.29",
        "codeception/module-phpbrowser": "^1.0.0",
        "codeception/module-asserts": "^1.0.0",
        "vlucas/phpdotenv": "^3.0",
        "codeception/module-yii2": "^1.1",
        "craftcms/rector": "dev-main"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
